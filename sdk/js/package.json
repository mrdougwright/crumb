{
  "name": "@crumb/sdk",
  "version": "0.1.0",
  "description": "JavaScript SDK for Crumb",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.js --bundle --minify --format=iife --outfile=dist/index.js",
    "dev": "esbuild src/index.js --bundle --outfile=dist/index.js --watch --format=iife --global-name=crumb",
    "test": "vitest",
    "test:mx": "vitest run",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@vitest/ui": "^3.1.1",
    "esbuild": "^0.25.2",
    "jsdom": "^26.0.0",
    "vitest": "^3.1.1"
  }
}
